WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:

<FirstWindow>:

    name: 'Top Sellers'
    BoxLayout:

        orientation: 'vertical'

        Label:
            id: title
            text: "Welcome to SteamBot"
            font_name: 'OLDENGL.TTF'
            font_size: 54
            color: (199/255, 213/255, 224/255, 1)
            background_color: (27/255, 40/255, 56/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, 0.2

        BoxLayout:
            #spacing: 150
            background_color: (27/255, 40/255, 56/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            padding: [10, 0, 10, 0]
            size_hint: 1, 0.1
            orientation: 'horizontal'
            Button:
                size_hint: .2, 1
                text: 'Top Sellers'
                on_press: app.root.current = 'Top Sellers'
            Button:
                size_hint: .2, 1
                text: 'Best Rated'
                on_press: app.root.current = 'Best Rated'
            Label:
                text: 'By: Sean Shea'
                font_size: 32
                font_name: 'OLDENGL.TTF'
                color: (199/255, 213/255, 224/255, 1)
            Button:
                size_hint: .2, 1
                text: 'On Sale'
                on_press: app.root.current = 'On Sale'
            Button:
                size_hint: .2, 1
                text: 'Refresh'

        Data1:
            id: 'data_table'
            background_color: (27/255, 40/255, 56/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


