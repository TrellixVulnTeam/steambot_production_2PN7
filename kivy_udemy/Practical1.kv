Game:
<Game>:
    orientation: 'vertical'
    ScrollView:
        do_scroll_y: True
        Buttons:
            id: stacker
            padding: dp(10)
            spacing: dp(10)
            size_hint: 1, None
            height: self.minimum_height
    BoxLayout:
        size_hint: 1, 0.2
        Button:
            text: 'create'
            on_press: root.create_btn(stacker)
            background_color: .3, .4, .5, 1
            background_normal: ''
        Button:
            text: 'remove'
            on_press: root.rmv_btn(stacker)
            background_color: .6, .7, .8, 1
            background_normal: ''
